<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity"
    >

    <ImageView
        android:id="@+id/backgroundImageView"
        android:layout_width="wrap_content"
        android:layout_height="715dp"
        android:scaleType="centerCrop"
        android:src="@drawable/aibackground" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="378dp"
        android:layout_height="309dp"
        android:src="@drawable/ic_launcher_foreground"
        android:layout_marginTop="40dp"
        />

    <Button
        android:id="@+id/btnCapture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:text="Capture Image"
        android:alpha="0.5"/>

    <EditText
        android:id="@+id/editTextEditedText"
        android:layout_width="380dp"
        android:layout_height="140dp"
        android:layout_below="@id/btnCapture"
        android:layout_marginTop="30dp"
        android:background="#90000000"
        android:gravity="center"
        android:hint="Editable Extracted Text"
        android:textColor="#F3EBEB"
        android:textColorHint="#EFE6E6"
        android:textSize="18dp" />

    <Button
        android:id="@+id/btnUpdateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextEditedText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Update Text"
        android:alpha="0.5"
        />

</RelativeLayout>
